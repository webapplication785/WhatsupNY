      id: 'examples.map-i875mjb7'
    }).addTo(map);
</script>

<script src="./assets/L.Control.Locate.js"></script>

<script>
  
var lc = L.control.locate({
    follow: true,
    setView: true,
    keepCurrentZoomLevel: true,
    stopFollowingOnDrag: true,
    showPopip: true,
    strings: {
      title: "Show me wur i be",
    }
  }).addTo(map)  
</script>

